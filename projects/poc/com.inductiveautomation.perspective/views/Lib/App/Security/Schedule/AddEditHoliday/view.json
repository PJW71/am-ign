                    },
                    "propConfig": {
                      "props.text": {
                        "binding": {
                          "config": {
                            "path": "view.params.mode"
                          },
                          "transforms": [
                            {
                              "fallback": "{view.params.selectedHoliday}",
                              "inputType": "scalar",
                              "mappings": [
                                {
                                  "input": "add",
                                  "output": "\"\""
                                }
                              ],
                              "outputType": "expression",
                              "type": "map"
